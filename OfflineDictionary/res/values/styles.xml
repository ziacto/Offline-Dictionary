<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:icon">@drawable/selector_menu</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:homeAsUpIndicator">@drawable/no_drawable</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/action_bar_back</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="sliding_menu_textview_headding_width_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/tab_padding</item>
        <item name="android:textColor">@color/action_bar_back</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/search_item_padding</item>
    </style>

    <style name="sliding_menu_textview_headding_width_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/tab_padding</item>
        <item name="android:paddingRight">@dimen/tab_padding</item>
        <item name="android:textColor">@color/action_bar_back</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingBottom">@dimen/search_item_padding</item>
        <item name="android:paddingTop">@dimen/search_item_padding</item>
    </style>

</resources>